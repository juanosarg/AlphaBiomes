	<!--============================ Trees ============================-->

  <ThingDef ParentName="PlantBase">
    <defName>AB_AlienTree</defName>
    <label>alien tree</label>
    <description>This tree is completely alien, probably not even 100% carbon based, and it seems to be struggling to grow from exposure to a terrestrial environment. Strange fruits resembling eyeballs hang from the tree, but they are probably not edible. Its wood releases a powerful, sweet scent. Perhaps its wood can be somehow useful.</description>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
	   <Flammability>0.8</Flammability>
      <Nutrition>0.1</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plants/GU_AlienTree</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.24, 0.3, 0.15)</volume>
				<offset>(0,0,-0.38)</offset>
			</shadowData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <selectable>true</selectable>
    <fillPercent>0.35</fillPercent>
    <passability>PassThroughOnly</passability>
    <pathCost>130</pathCost>
    <blockWind>true</blockWind>
    <ingestible>
      <foodType>Tree</foodType>
      <preferability>RawBad</preferability>
      
    </ingestible>
    <plant>
			<fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growDays>5</growDays>
			
			<soundHarvesting>Harvest_Tree</soundHarvesting>
			<soundHarvestFinish>Harvest_Tree_Finish</soundHarvestFinish>
			<harvestWork>300</harvestWork>
			<harvestedThingDef>GU_RedWood</harvestedThingDef>
			<harvestTag>Wood</harvestTag>
			<harvestYield>10</harvestYield>
			<harvestMinGrowth>0.2</harvestMinGrowth>
			<harvestFailable>false</harvestFailable>
			<visualSizeRange>2.3~3</visualSizeRange>
			<topWindExposure>0.3</topWindExposure>
			<sowResearchPrerequisites>
				<li>TreeSowing</li>
			</sowResearchPrerequisites>
		 <mustBeWildToSow>true</mustBeWildToSow>
			<sowTags>
				<li>Ground</li>

			</sowTags>
			 <blockAdjacentSow>true</blockAdjacentSow>
		</plant>
  </ThingDef>
  
